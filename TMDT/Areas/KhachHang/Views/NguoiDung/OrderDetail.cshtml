@model TMDT.Models.Order
@using TMDT.Models
@{
    ViewBag.Title = "OrderDetail";
    Layout = "~/Areas/KhachHang/Views/Shared/_LayoutPageUS.cshtml";
}
@{
    TMDTThucAnNhanhEntities db = new TMDTThucAnNhanhEntities();

    var lstp = db.OrderDetail.Where(s => s.orderID == Model.orderID);
  



}

<div class="col-sm-12 col-md-9 col-lg-9">

        <div class="container">
            <div class="row ">
                <div class="col-lg-12 col-xl-12">
                    <div class="card" id="carbo">
                        <div class="card-header">
                            <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">@Model.User.fullName</span>!</h5>
                            <p class="text-muted mb-0">Ngày: @Model.datetime</p>
                        </div>
                        <div class="card-body p-2">
                                                       
                            @foreach (var item in lstp)
                            {
                                var pro = db.Combo.FirstOrDefault(s => s.comboID == item.comboID);
                                var upup = db.ComboDetail.FirstOrDefault(a => a.comboID == item.comboID);
                                var price = pro.price * (100 - pro.sale) / 100 * item.quantity;
                                <div class="card shadow-0 border mb-4">
                                    <div class="card-body border">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/1.webp"
                                                     class="img-fluid" alt="Phone">
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0">@pro.nameCombo</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">@string.Format("{0:N0}", pro.price)</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">@pro.sale%</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">Số lượng:@item.quantity</p>
                                            </div>
                                            <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small">@string.Format("{0:N0}", price)</p>
                                            </div>
                                        </div>
                                        <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                    </div>
                                </div>
                            }

                        <div class="card-near-foot ">
                            <div class="d-flex justify-content-between pt-2">
                                <p class="fw-bold mb-0">Order Details</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4"></span> </p>
                            </div>

                            <div class="d-flex justify-content-between pt-2">
                                <p class="text-muted mb-0"><span class="fw-bold me-2">Tên Người Nhận :</span> @Model.recipient</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-2">Trạng Thái:</span> @Model.Condition.nameCon </p>
                            </div>

                            <div class="d-flex justify-content-between">

                                <p class="text-muted mb-0"><span class="fw-bold me-2">Số Điện Thoại:</span> @Model.recipientNumber</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-2">Hình thức thanh toán:</span> @Model.TypePayment</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p class="text-muted mb-0"><span class="fw-bold me-1">Địa chỉ: </span> @Model.fullAddress</p>

                            </div>
                        </div>
                            
                        </div>
                        <div class="card-footer border "
                             style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                                Thành Tiền : <span class="h2 mb-0 ms-2">@string.Format("{0:N0}", Model.total) VNĐ  </span>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</div>


  
<style>
    .card-header {
        border: 1px solid #8f686885 !important;
    }
    #carbo {
        box-shadow: 0px 0px 10px 5px rgb(230 146 146 / 49%);
        border-radius: 10px;
        border: 2px solid #a0a0a0;
    }
    .card-body .border {
        border: 1px solid #8f686885 !important;
    }
    .card-near-foot {
        border-top: 1px solid #8f686885 !important;
    }
</style>