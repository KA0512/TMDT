@model TMDT.Models.User

@{
    ViewBag.Title = "SendResetLink";
    Layout = "~/Areas/KhachHang/Views/Shared/_LayoutVL.cshtml";
}
<div class="login-register-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <a class="active" style="text-align:center" href="#lg1">
                        <h2>Quên mật khẩu </h2>
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                    </a>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="#" method="post">
                                        @using (Html.BeginForm("SendResetLink", "NguoiDung", FormMethod.Post))
                                        {
                                            @Html.ValidationSummary(true)
                                        <div class="row">
                                            <div class="col-md-8">
                                                <label for="email">Vui lòng nhập Mail của bạn </label>
                                                <input type="email" id="email" name="email" required />
                                            </div>
                                            <div class="col-md-4 btn btn-primary">
                                                <button type="submit">Xác nhận</button>
                                            </div>

                                        </div>
                                         

                                        }
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .col-md-4{
        margin-top: 35px
    }
        .col-md-4 .btn:hover{
            background-color:black;
        }
</style>