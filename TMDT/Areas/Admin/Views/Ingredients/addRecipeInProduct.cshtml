@model IEnumerable<ingre>
@using TMDT.Models
@{
    ViewBag.Title = "addRecipeInProduct"; 
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdminPage.cshtml";
    int i = 0;
    TMDTThucAnNhanhEntities db = new TMDTThucAnNhanhEntities();
}



<div class="col-xl-10 col-lg-12 tm-md-12 tm-sm-12 tm-col container">
    <div class="bg-white tm-block h-100">
        <div class="row">
            <div class="col-md-8 col-sm-12">
                <h2 class="tm-block-title d-inline-block">Danh sách thực phẩm</h2>
            </div>
            <div class="col text-right row">
                <button id="btnTao" class="btn btn-small btn-primary mr-3">tạo</button>
            </div>
        </div>
        <div class="table-responsive">
            @using (Html.BeginForm("createRecipeInProduct", "Product", new { @class = "tm-edit-product-form" }))
            {
                <select name="idPro">
                    <option>-Chọn sản phẩm-</option>
                    @foreach (var item in db.Product)
                    {
                        if (db.Recipe.FirstOrDefault(f => f.cateID == item.cateID) != null)
                        {
                            <option value="@item.cateID">@item.name</option>
                        }
                    }
                </select>

                    <table class="table table-hover table-striped tm-table-striped-even mt-3">
                        <thead>
                            <tr class="tm-bg-gray">
                                <th scope="col">&nbsp;</th>
                                <th scope="col">Tên thực phẩm</th>
                                <th scope="col" class="text-center">số lượng</th>
                                <th scope="col" class="text-center">Đơn vị tính</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="col-product">
                                    <td>
                                        <input type="hidden" name="ingre[@i].id" id="ingID" value="@item.id" />
                                    </td>
                                    <td class="tm-product-name">@db.Ingredient.FirstOrDefault(f=>f.ingID == item.id).ingName</td>
                                    <td class="text-center">
                                        <div class="">
                                            <input type="text" name="ingre[@i].quantity" class="form-control validate col" value="@item.quantity"/>
                                            <span class="text-danger"></span>
                                        </div>
                                    </td>
                                    <td class="text-center">@db.Ingredient.FirstOrDefault(f => f.ingID == item.id).Unit.nameU</td>
                                    <td><i class="fas fa-trash-alt tm-trash-icon"></i></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    }
                </div>
            </div>
        </div>
        @section Scripts{
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
            <script>

                $(document).ready(function () {
                    $('#btnTao').click(function () {

                        $('tr.col-product').each(function (index, value) {
                            var inputValue = $(this).find('input[name="quantity"]').val();
                            if (inputValue.trim() != "") {
                                $(this).find('input[type="checkbox"]').prop('checked', true);
                                var quantityValue = $(this).find('input[name="quantity"]').val();
                                var ingID = $(this).closest('tr').find('input[name="ingID"]').val();
                                console.log("Quantity Value:", quantityValue);
                                console.log("ingID Value:", ingID);
                            } else {
                                $(this).find('input[type="checkbox"]').prop('checked', false);
                                var ingID = $(this).closest('tr').find('input[name="ingID"]').val();
                                console.log("ingID Value:", ingID);
                            }
                        });

                    })

                    $('input[name="quantity"]').change(function () {
                        // Kiểm tra trạng thái của checkbox
                        var item = $(this).val();
                        var quantityValue;
                        var ingID;
                        if (item !== null && item.trim() !== "") {

                            $(this).closest('tr').find('input[type="checkbox"]').prop('checked', true);
                            var quantityValue = $(this).closest('tr').find('input[name="quantity"]').val();
                            var ingID = $(this).closest('tr').find('input[name="ingID"]').val();

                            console.log('quantity: ' + quantityValue + ' id : ' + ingID);

                            addRecipe(parseInt(ingID), parseFloat(quantityValue));
                        } else {
                            $(this).closest('tr').find('input[type="checkbox"]').prop('checked', false);
                        }

                    });

                    function addRecipe(_id, _quantity) {
                        $.ajax({
                            url: "/Ingredients/CrRecipe",
                            dataType: "json",
                            type: "POST",
                            contentType: 'application/json; charset=utf-8',
                            data: JSON.stringify({ id: _id, quantity: _quantity }),
                            success: function (data) {
                                console.log('--------------')
                                var dataArray = Object.values(data);

                                for (let x in dataArray) {
                                    console.log(dataArray[x].id);
                                    console.log(dataArray[x].quantity);
                                }
                            },
                            error: function (xhr) {
                                alert('error');
                            }
                        });
                    }

                });

            </script>
        }





