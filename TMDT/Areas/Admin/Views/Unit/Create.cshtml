@model TMDT.Models.Unit

@{
    ViewBag.Title = "Create"; Layout = "~/Areas/Admin/Views/Share/_LayoutAdminPage.cshtml";
}

<br />
<br />
<div class="col-xl-8 col-lg-10 col-md-12 col-sm-12">
    <div class="bg-white tm-block">
        <div class="row">
            <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Thêm đơn vị đo</h2>
            </div>
        </div>
        <div class="row mt-4 tm-edit-product-row">
            <div class="col-xl-7 col-lg-7 col-md-12">
                @using (Html.BeginForm("Create", "Unit", new { @class = "tm-edit-product-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Đơn vị</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Tên đơn vị đo</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.nameU, new { htmlAttributes = new { @class = "form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" } })
                                @Html.ValidationMessageFor(model => model.nameU, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>


