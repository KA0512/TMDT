@model TMDT.Models.Employees

@{
    ViewBag.Title = "AddnewNV";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdminPage.cshtml";
}

<h2>AddnewNV</h2>

@using (Html.BeginForm("AddnewNV","Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
