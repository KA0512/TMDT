<body class="bg03">
    <div class="container">
        <div class="row tm-mt-big">
            <div class="col-12 mx-auto tm-login-col">
                <div class="bg-white tm-block">
                    <div class="row">
                        <div class="col-12 text-center">
                            <i class="fas fa-3x fa-tachometer-alt tm-site-icon text-center"></i>
                            <h2 class="tm-block-title mt-3">Login</h2>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "tm-login-form" }))
                            {
                                <div class="input-group">
                                    <label for="user" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Username</label>
                                    <input name="user" type="text" class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" id="user" required>
                                </div>
                                <div class="input-group mt-3">
                                    <label for="password" class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Password</label>
                                    <input name="password" type="password" class="form-control validate" id="password" required>

                                </div>
                                <p class="text-danger">@TempData["errorLogin"]</p>
                                <div class="input-group mt-3">

                                    <button type="submit" class="btn btn-primary d-inline-block mx-auto">Login</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>



