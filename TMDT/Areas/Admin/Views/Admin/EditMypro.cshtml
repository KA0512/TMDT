@model TMDT.Models.Employees
@{
    ViewBag.Title = "EditMypro";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdminPage.cshtml";
}

<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }
</style>
<br />
<br />
@using (Html.BeginForm("EditMypro", "Admin", FormMethod.Post, new { @class = "tm-login-form" }))
{
    @Html.Hidden("EmployeeID",Model.EmployeeID)
    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="@Model.imgEP"
                                     alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                <input type="text" name="FirstName" value="@Model.FirstName" /> <input type="text" name="LastName" value="@Model.LastName" />
                                <input type="text"  value="@Model.EmployeeID" disabled />



                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            <input type="text" name="Email" value="@Model.Email" />

                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <input type="text" name="numberPhone" value="@Model.numberPhone" />

                                        </div>
                                    </div>

                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Mã chi nhánh</h6>
                                            <input type="text" value="@Model.locationID" disabled />

                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Chi nhánh</h6>
                                            <input type="text"  value="@Model.location" disabled />

                                        </div>
                                    </div>
                                    <button type="submit">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>
}

