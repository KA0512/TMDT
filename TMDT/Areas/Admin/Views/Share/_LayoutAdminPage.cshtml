<!DOCTYPE html>

<html>
<head>


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard Admin </title>
    <!--

    Template 2108 Dashboard



    -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <!-- https://fonts.google.com/specimen/Open+Sans -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/fontawesome.min.css">
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/fullcalendar.min.css">
    <!-- https://fullcalendar.io/ -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/bootstrap.min.css">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/css/tooplate.css">
</head>
<body id="reportsPage">
    <div class="" id="home">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-xl navbar-light bg-light">
                        @Html.ActionLink("Dashboard", "Index", "Admin", null, new { @Class = "tm-site-title mb-0" })
                        <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        Sản phẩm
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @Html.ActionLink("Nguyên liệu", "Index", "Ingredients", null, new { @Class = "dropdown-item" })
                                        @Html.ActionLink("Đơn vị đo", "Index", "Unit", null, new { @Class = "dropdown-item" })
                                        @Html.ActionLink("Sản phẩm", "Index", "Product", null, new { @Class = "dropdown-item" })

                                    </div>
                                </li>



                                <li class="nav-item">
                                    @Html.ActionLink("Tài khoản", "Account", "Admin", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Khách hàng", "QlyKH", "Admin", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Đơn hàng", "DonHang", "Admin", null, new { @class = "nav-link" })
                                </li>


                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        <i class="far fa-user mr-2 tm-logout-icon"></i>
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @Html.ActionLink("Profile", "Mypro", "Admin", null, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Đăng xuất", "Logout", "Admin", null, new { @class = "dropdown-item" })
                                    </div>
                                </li>

                            </ul>
                           
                            
                        </div>
                    </nav>
                </div>
            </div>
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
<script src="~/Areas/Admin/Content/js/jquery-3.3.1.min.js"></script>
<!-- https://jquery.com/download/ -->
<script src="~/Areas/Admin/Content/js/moment.min.js"></script>
<!-- https://momentjs.com/ -->
<script src="~/Areas/Admin/Content/js/utils.js"></script>
<script src="~/Areas/Admin/Content/js/Chart.min.js"></script>
<!-- http://www.chartjs.org/docs/latest/ -->
<script src="~/Areas/Admin/Content/js/fullcalendar.min.js"></script>
<!-- https://fullcalendar.io/ -->
<script src="~/Areas/Admin/Content/js/bootstrap.min.js"></script>
<!-- https://getbootstrap.com/ -->
<script src="~/Areas/Admin/Content/js/tooplate-scripts.js"></script>
<script>
    let ctxLine,
        ctxBar,
        ctxPie,
        optionsLine,
        optionsBar,
        optionsPie,
        configLine,
        configBar,
        configPie,
        lineChart;
    barChart, pieChart;
    // DOM is ready
    $(function () {
        updateChartOptions();
        drawLineChart(); // Line Chart
        drawBarChart(); // Bar Chart
        drawPieChart(); // Pie Chart
        drawCalendar(); // Calendar

        $(window).resize(function () {
            updateChartOptions();
            updateLineChart();
            updateBarChart();
            reloadPage();
        });
    })
</script>

    @RenderSection("scripts", required: false)
</html>
